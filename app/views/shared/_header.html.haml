.d-flex.flex-column.flex-md-row.align-items-center.p-3.px-md-4.mb-3.bg-white.border-bottom.shadow-sm
  %h5.my-0.mr-md-auto.font-weight-normal
    = link_to 'Publish Events', root_path
  %nav.my-2.my-md-0.mr-md-3
  - if current_user
    = link_to 'Locations', user_locations_path(current_user), class: 'p-2 text-dark'
    = link_to 'Events', user_events_path(current_user), class: 'p-2 text-dark'
    %div.nav-item.dropdown
      %a#navbarDropdown.nav-link.dropdown-toggle.p-2.text-dark{"aria-expanded" => "false", "aria-haspopup" => "true", "data-toggle" => "dropdown", :href => "#", :role => "button"}
        Invitations
      .dropdown-menu{"aria-labelledby" => "navbarDropdown"}
        %a.dropdown-item{:href => sent_invitations_invitations_path} Sent
        %a.dropdown-item{:href => receive_invitations_invitations_path} Recieved

  -if current_user
    = link_to('Logout', destroy_user_session_path, method: :delete)    
  - else
    = link_to 'Login', new_user_session_path(current_user), class: 'btn btn-outline-primary'
